project boost/cgi/example/cgi/echo ;

exe cgi_echo
  :
    main.cpp
  :
    <library>/boost/cgi/
  ;


# Our install rule (builds binaries and copies them to <location>)
install install
 :
   cgi_echo
 :
   <location>$(cgi-bin)
 ;

# Only install example if you use `bjam install' or equivalent
explicit install ;
